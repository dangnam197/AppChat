<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.GroupChatFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"
        android:id="@+id/imgAvatarCurrentUser"
        android:src="@drawable/default_user"
        />
    <TextView
        android:layout_width="0dp"
        android:id="@+id/txtCurrentUserName"
        app:layout_constraintTop_toTopOf="@+id/imgAvatarCurrentUser"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatarCurrentUser"
        app:layout_constraintLeft_toRightOf="@id/imgAvatarCurrentUser"
        app:layout_constraintWidth_percent="0.4"
        android:textSize="25sp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="0dp"
        android:id="@+id/txtLogOut"
        app:layout_constraintTop_toTopOf="@+id/imgAvatarCurrentUser"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatarCurrentUser"
        app:layout_constraintWidth_percent="0.2"
        android:textSize="20sp"
        android:text="@string/fragment_group_chat_text_view_logout_text"
        android:textColor="@color/textLink"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/textColor"
        app:layout_constraintTop_toBottomOf="@id/imgAvatarCurrentUser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/viewLine"
        app:layout_constraintBottom_toTopOf="@id/tabLayout"
        android:id="@+id/viewPager">
    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backGroundTabLayout"
        app:layout_constraintBottom_toBottomOf="parent">
    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>